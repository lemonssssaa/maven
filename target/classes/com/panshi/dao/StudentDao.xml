<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.panshi.dao.StudentDao">
    <resultMap id="student" type="Student">
        <id column="id" property="id"/>
        <result property="name" column="name"/>
        <collection property="tec" ofType="Tec">
            <id column="tid" property="tid"/>
            <result column="tname" property="tname"/>
        </collection>
    </resultMap>


    <select id="query" resultType="com.panshi.vo.Student">
        SELECT * FROM test
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
        </where>
    </select>
    <insert id="addStu" parameterType="List">
        insert into test (name) values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.name})
        </foreach>
    </insert>
    <delete id="delStu" parameterType="List">
        delete from test where id in
        <foreach collection="list" item="item" index="index" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>
    <update id="updStu" parameterType="com.panshi.vo.Student">
        update  test set name = #{name} where id = #{id};
    </update>

    <select id="queryAll" resultMap="student">
        select s.*,c.tname from test s left join
        s_c sc on sc.sid = s.id right join tec c
        on c.tid = sc.cid
    </select>
</mapper>
